<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hbazai.carcrashprj.LoginController"
            prefHeight="600.0" prefWidth="400.0" stylesheets="@register.css" styleClass="anchor-pane">
    <children>
        <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="100">
            <children>
                <Label text="Register" styleClass="title"/>
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Username:" styleClass="label"/>
                    <TextField fx:id="usernameField" styleClass="text-field"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Password:" styleClass="label"/>
                    <PasswordField fx:id="passwordField" styleClass="text-field"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Login" onAction="#handleLoginAction" styleClass="green-button"/>
                    <Button text="Back To Menu"  styleClass="red-button" onAction="#handleBackAction"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>


