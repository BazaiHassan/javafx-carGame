<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hbazai.carcrashprj.ScoresController"
            prefHeight="600.0" prefWidth="400.0" stylesheets="@scores.css" styleClass="anchor-pane">

    <TableView fx:id="scoresTable" layoutX="50.0" layoutY="50.0" prefHeight="450.0" prefWidth="300.0" styleClass="table-view">
        <columns>
            <TableColumn fx:id="placeColumn" text="Place" styleClass="table-column-header" prefWidth="50" />
            <TableColumn fx:id="usernameColumn" text="Username" styleClass="table-column-header" prefWidth="150" />
            <TableColumn fx:id="scoreColumn" text="Score" styleClass="table-column-header" prefWidth="100" />
        </columns>
    </TableView>

    <Button fx:id="backButton" text="Back" layoutX="150.0" layoutY="520.0" styleClass="back-button" />
</AnchorPane>
